@model BusinessLayer.Auth.Models.NewAccountForm
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>ECommerce - @ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/css/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/css/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">

        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a href="" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Beauty</h1>
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left">
            </div>
            <div class="col-lg-3 col-6 text-right">
                <a href="" class="btn border">
                    <i class="fas fa-heart text-primary"></i>
                    <span class="badge">0</span>
                </a>
                <a href="" class="btn border">
                    <i class="fas fa-shopping-cart text-primary"></i>
                    <span class="badge">0</span>
                </a>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid">
        <div class="row border-top px-xl-5">
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px">
            <h1 class="font-weight-semi-bold mb-3">Create A New Account and Start Shopping Today!</h1>
            <div class="d-inline-flex">
                <p class="m-0">Do you have an account? You can login by <a href="@Url.Action("Index", "Login")">clicking here.</a></p>
            </div>

        </div>
    </div>

    <div class="row justify-content-center ">
        <p class="m-0 font-weight-semi-bold">Please fill the fields correctly in order to avoid delivery problems in your next purchases.</p>
    </div>

    <div class="container-fluid pt-5">
        <div class="row d-flex justify-content-center ">
            <div class="col-lg-8">
                <form action="@Url.Action("Index", "Register")" method="post">
                    <div class="mb-4">
                        <div class="row">

                            <div class="col-md-6 form-group">
                                <label>First Name</label>
                                <input asp-for="FirstName" class="form-control" type="text" placeholder="Ezgi">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Last Name</label>
                                <input asp-for="LastName" class="form-control" type="text" placeholder="Çiftçil">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>E-mail</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="example@gmail.com">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="0530 330 30 30">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Password</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Password Repeat</label>
                                <input asp-for="PasswordRepeat" class="form-control" type="password" placeholder="Password Repeat">
                            </div>
                            <div class="col-md-12 form-group">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="IsAddressWanted" type="checkbox" class="custom-control-input" id="shipto">
                                    <label class="custom-control-label" for="shipto" data-toggle="collapse" data-target="#shipping-address">I want to save my shipping adress information.</label>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="collapse mb-4" id="shipping-address">
                        <h4 class="font-weight-semi-bold mb-4">Shipping Address</h4>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Country</label>
                                <select asp-for="Country" class="custom-select">
                                    <option selected>Turkey</option>
                                </select>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>City</label>
                                <select asp-items="@ViewBag.cities" asp-for="CityId" style="width: 100%" class="form-control select2-">
                                    <option disabled selected hidden>Select City</option>
                                </select>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Street</label>
                                <input asp-for="Street" class="form-control" type="text" placeholder="Street">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Postal Code</label>
                                <input asp-for="PostalCode" class="form-control" type="text" placeholder="Postal Code">
                            </div>
                            <div class="col align-self-center form-group">
                                <label>Address Description</label>
                                <input asp-for="AddressDesc" class="form-control" type="text" placeholder="Please write your full address correctly.">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col align-self-center">
                            <button type="submit" class="btn btn-dark btn-block">Create a New Account</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Checkout End -->
    <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
        <div class="row px-xl-5 pt-5">
            <div class="align-self-center">
                <a href="" class="text-decoration-none">
                    <h1 class="mb-4 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border border-white px-3 mr-1">E</span>Shopper</h1>
                </a>
                <p>
                    This project was developed for Ezgi Çiftçil's Yıldız Technical University Mathematical Engineering Graduation Project. It is not prepared for the purpose of making any profit. The front is prepared by editing a ready-made theme.
                </p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>ciftcilezgi@gmail.com</p>
                <p class="mb-0"><i class="fab fa-github text-primary mr-3"></i>ezgiciftcil</p>
            </div>
        </div>
        <div class="row border-top border-light mx-xl-5 py-4">
            <div class="col-md-6 px-xl-0">
                <p class="mb-md-0 text-center text-md-left text-dark">
                    &copy; <a class="text-dark font-weight-semi-bold" href="#">EBeauty.</a>. All Rights Reserved. Designed
                    by
                    <a class="text-dark font-weight-semi-bold" href="https://htmlcodex.com">HTML Codex</a>
                </p>
            </div>
            <div class="col-md-6 px-xl-0 text-center text-md-right">
                <img class="img-fluid" src="img/payments.png" alt="">
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/easing.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/js/jqBootstrapValidation.min.js"></script>
    <script src="~/js/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>

</html>