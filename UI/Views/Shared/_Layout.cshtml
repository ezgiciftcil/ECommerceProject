<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>EBeauty - @ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/css/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/css/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
</head>
<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row align-items-center py-3 px-xl-5">

            <div class="col-lg-8 d-none d-lg-block">
                <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Beauty</h1>
                </a>
            </div>
            @{
                var sessionName = new Byte[20];
                bool sessionOk = Context.Session.TryGetValue("_UserId", out sessionName);

                if (sessionOk)
                {
                    <div class="text-right">
                        <a href="@Url.Action("Index","Home")" class="btn border">
                            <i class="fa fa-home text-primary"></i>
                        </a>
                        <a href="@Url.Action("UserTypeAdd","Test")" class="btn border">
                            <i class="fa fa-user text-primary"></i>
                            <span class="badge">My Profile</span>
                        </a>
                        <a href="@Url.Action("UserAdd","Logout")" class="btn border">
                            <i class="fas fa-heart text-primary"></i>
                            <span class="badge">Favorites</span>
                        </a>
                        <a href="@Url.Action("Index","Logout")" class="btn border">
                            <i class="fas fa-shopping-cart text-primary"></i>
                            <span class="badge">Cart</span>
                        </a>
                        <a href="@Url.Action("Index","Logout")" class="btn border">
                            <i class="fas fa-sign-out-alt text-primary"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class=" text-right">
                        <a href="@Url.Action("Index","Home")" class="btn border">
                            <i class="fa fa-home text-primary"></i>
                            <span class="badge">Home</span>
                        </a>
                        <a href="@Url.Action("Index","Register")" class="btn border">
                            <i class="fa fa-plus text-primary"></i>
                            <span class="badge">Create a New Account</span>
                        </a>
                        <a href="@Url.Action("Index","Login")" class="btn border">
                            <i class="fas fa-sign-in-alt text-primary"></i>
                            <span class="badge">Sign In</span>
                        </a>
                    </div>
                }

           }
                    
                </div>
        </div>
        <!-- Topbar End -->
        <!-- Navbar Start -->
        <div class="container-fluid">
            <div class="row border-top px-xl-5">
                <div class="col-lg-9">
                    <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                        <a href="" class="text-decoration-none d-block d-lg-none">
                            <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                        </a>
                        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                    </nav>
                </div>
            </div>
        </div>

        @RenderBody()

        <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
            <div class="row px-xl-5 pt-5">
                <div class="align-self-center">
                    <a href="" class="text-decoration-none">
                        <h1 class="mb-4 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border border-white px-3 mr-1">E</span>Beauty</h1>
                    </a>
                    <p>
                        This project was developed for Ezgi Çiftçil's Yıldız Technical University Mathematical Engineering Graduation Project. It is not prepared for the purpose of making any profit. The front is prepared by editing a ready-made theme.
                    </p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>ciftcilezgi@gmail.com</p>
                    <p class="mb-0"><i class="fab fa-github text-primary mr-3"></i>ezgiciftcil</p>
                </div>
            </div>
            <div class="row border-top border-light mx-xl-5 py-4">
                <div class="col-md-6 px-xl-0">
                    <p class="mb-md-0 text-center text-md-left text-dark">
                        &copy; <a class="text-dark font-weight-semi-bold" href="#">EBeauty.</a>. All Rights Reserved. Designed
                        by
                        <a class="text-dark font-weight-semi-bold" href="https://htmlcodex.com">HTML Codex</a>
                    </p>
                </div>
                <div class="col-md-6 px-xl-0 text-center text-md-right">
                    <img class="img-fluid" src="img/payments.png" alt="">
                </div>
            </div>
        </div>
       
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
